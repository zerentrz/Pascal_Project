uses crt;
procedure UCGEN_ALAN ;
VAR
a, h, alan: double;
begin
 write('UCKENIN TABAN DEGERI NEDIR                :'   ); readln(a);
write('UCGENIN YUKSEKLIK DEGERINI GIRINIZ   :'   ); readln(h);

alan:=(a*h)/2; writeln('UCGENIN ALANI ',alan:0:2 );

 end;

 begin
